<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/tools"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagen_prospecto"
                android:layout_width="@dimen/perfil_image_size"
                android:layout_height="@dimen/perfil_image_size"
                android:layout_marginBottom="6dp"
                android:layout_margin="5dp"

                android:scaleType="centerCrop"
                android:src="@drawable/yo"
                app:border_color="#e2e2e2"
                app:border_width="1dp" />

            <TextView
                android:id="@+id/nombre_prospecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imagen_prospecto"
                android:layout_marginTop="15dp"
                android:text="Alberto Wong"/>

            <TextView
                android:id="@+id/correo_prospecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="alberto.wong@salesup.com.mx"
                android:layout_below="@+id/nombre_prospecto"
                android:layout_alignLeft="@+id/nombre_prospecto"
                />
